{{> /layout/header}}

<div class="container p-5">
    <!-- 수정삭제 -->
    <div class="d-flex justify-content-end">
        <button type="button" class="btn btn-secondary mx-2">돌아가기</button>
        <button type="button" class="btn btn-warning mx-2">수정</button>
        <button type="button" class="btn btn-danger mx-2">삭제</button>
    </div>

    <!-- 제목내용 -->
    <ul class="list-group list-group-flush mt-5">
        <li class="list-group-item">
            <h3>제목</h3>
        </li>
        <li class="list-group-item">
            <h4>내용</h4>
        </li>
    </ul>

    <!-- 댓글달기 -->
    <div class="card mt-5">
        <div class="card-body">
            <form action="/댓글리스트" method="post" enctype="application/x-www-form-urlencoded">
                <div class="mb-3">
                    <b>
                        <h5>댓글을 써주세요</h5>
                    </b>
                    <textarea class="form-control" rows="5" name="content"></textarea>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">등록</button>
                </div>
            </form>
        </div>
    </div>

    <!-- 댓글리스트 -->
    <div class="card mt-5">
        <div class="card-header">
            <b>댓글 리스트</b>
        </div>
        <div class="card-body">
            <form action="/응답" method="post" enctype="application/x-www-form-urlencoded">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">First item</li>
                    <li class="list-group-item">Second item</li>
                    <li class="list-group-item">Third item</li>
                    <li class="list-group-item">Fourth item</li>
                </ul>
            </form>
        </div>
    </div>

</div>

{{> /layout/footer}}